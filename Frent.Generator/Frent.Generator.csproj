    <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.4" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <!-- yoink -->
    <Compile Include="..\Frent.Variadic.Generator\EquatableArray.cs" Link="Structures\EquatableArray.cs"></Compile>
  </ItemGroup>
  
